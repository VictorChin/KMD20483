<Page
    x:Class="AccountTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccountTester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid >
   
    <TextBox HorizontalAlignment="Left" Height="30" Width="200" 
             TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Name="Owner"/>
    <TextBox HorizontalAlignment="Center" Height="30" Width="200" 
             TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Name="InitialDeposit"/>
    <Button Content="Create Account" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Name="btnCreateAccount" Click="btnCreateAccount_Click"/>
    </Grid>
</Page>
